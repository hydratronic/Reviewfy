<div class="container d-flex justify-content-between mt-4">
  <!-- Assign Reviewers card -->
  <div class="row col-md-6 card">
    <h4 class="text-center" style="color: #FCE22A; font-weight: bold;">Assign Reviewers</h4>
    <hr />

    <!-- Form to assign reviewers to a recipient -->
    <form method="POST" action="/admin/set-Reviewers" class="mt-2 card-body">
      <div>
        <!-- Select recipient from a dropdown menu -->
        <h6 style="color: #FCE22A; font-weight: bold;">Select Recipient</h6>
        <select
          class="form-select form-select-lg mb-3"
          aria-label=".form-select-lg example"
          name="Recipient"
        >
          <option selected disabled>Choose Recipient</option>

          <% for(let i=0; i < employeeList.length; i++){ %>
          <!-- Display a list of employees as options -->
          <option value="<%= employeeList[i].id  %>">
            <%= employeeList[i].name %>
          </option>
          <% } %>
        </select>
      </div>

      <div>
        <!-- Select reviewer from a dropdown menu -->
        <h6 style="color: #FCE22A; font-weight: bold;">Select Reviewer</h6>
        <select
          class="form-select form-select-lg mb-3"
          aria-label=".form-select-lg example"
          name="Reviewer"
        >
          <option selected disabled>Choose Reviewer</option>

          <% for(let i = 0; i < employeeList.length; i++){ %>
          <!-- Display a list of employees as options -->
          <option value="<%= employeeList[i].id %>">
            <%= employeeList[i].name %>
          </option>
          <% } %>
        </select>
      </div>

      <!-- Submit button to assign reviewers -->
      <div class="d-grid gap-2 col-6 mx-auto form_button">
        <input class="btn btn-dark" type="submit" value="Submit" />
      </div>
    </form>
  </div>

  <!-- Assign Admin card -->
  <div class="row col-md-6 card">
    <h4 class="text-center" style="color: #FCE22A; font-weight: bold;">Assign Admin to Employees</h4>
    <hr />

    <!-- Form to assign admin to an employee -->
    <form method="POST" action="/admin/newAdmin" class="mt-3">
      <!-- Select employee from a dropdown menu -->
      <select
        class="form-select form-select-lg mb-3"
        aria-label=".form-select-lg example"
        name="newAdmin"
      >
        <option selected disabled>Choose Employee</option>
        <% for(let i=0; i < employeeList.length; i++){ %>
        <!-- Display a list of employees as options -->
        <option value="<%= employeeList[i].id %>">
          <%= employeeList[i].name %>
        </option>
        <%}%>
      </select>

      <!-- Submit button to assign admin -->
      <div class="d-grid gap-2 col-6 mx-auto form_button">
        <input class="btn btn-dark" type="submit" value="Submit" />
      </div>
    </form>
  </div>
</div>
